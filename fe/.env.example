# Frontend Environment Variables for Shoez Shop

# API Configuration
VITE_API_URL=http://localhost:8000/api

# App Configuration  
VITE_APP_TITLE=Shoez Shop
VITE_APP_DESCRIPTION=Cửa hàng giày thể thao chính hãng

# Development Settings
VITE_DEBUG=true
VITE_LOG_LEVEL=debug

# Social Authentication (for future implementation)
VITE_GOOGLE_CLIENT_ID=your-google-client-id
VITE_FACEBOOK_APP_ID=your-facebook-app-id

# Payment Configuration (for future implementation)  
VITE_STRIPE_PUBLIC_KEY=your-stripe-public-key
VITE_PAYPAL_CLIENT_ID=your-paypal-client-id

# File Upload
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Other Settings
VITE_PAGINATION_LIMIT=12
VITE_CART_SESSION_TIMEOUT=3600000